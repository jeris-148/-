<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="stylesheet" href="/css/styles.css">
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>View Feedbacks</title>
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f9f9f9;
        }
        .container {
            width: 90%;
            max-width: 1200px;
            margin: 30px auto;
            padding: 20px;
            background: #0929ca;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }
        h1 {
            text-align: center;
            font-size: 2.5rem;
            color: #2c3e50;
            margin-bottom: 20px;
            border-bottom: 2px solid #e74c3c;
            padding-bottom: 10px;
        }
        .feedback-container {
            display: flex;
            flex-wrap: wrap;
            gap: 20px;
            justify-content: center;
        }
        .feedback-card {
            border: 1px solid #e74c3c;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15);
            max-width: 350px;
            background: #fff;
            text-align: left;
            color: #2c3e50;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }
        .feedback-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 12px 24px rgba(0, 0, 0, 0.2);
        }
        .feedback-card h4 {
            font-size: 1.5rem;
            margin-bottom: 10px;
            color: #e74c3c;
        }
        .feedback-card p {
            margin: 10px 0;
            font-size: 1rem;
            color: #34495e;
        }
        .feedback-card small {
            display: block;
            font-size: 0.85rem;
            color: #95a5a6;
        }
        .replies {
            margin-top: 15px;
            padding: 15px;
            background-color: #f9f9f9;
            border-radius: 5px;
            border-left: 4px solid #3498db;
        }
        .replies h5 {
            font-size: 1.2rem;
            margin-bottom: 10px;
            color: #3498db;
        }
        .replies div {
            margin-bottom: 10px;
            font-size: 0.95rem;
        }
        .replies strong {
            color: #2c3e50;
        }
        .back-home-button {
            display: inline-block;
            padding: 12px 20px;
            margin: 30px auto;
            font-size: 1rem;
            color: #fff;
            background-color: #e74c3c;
            text-decoration: none;
            border-radius: 5px;
            transition: background-color 0.3s ease;
            text-align: center;
        }
        .back-home-button:hover {
            background-color: #c0392b;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Customer Feedbacks</h1>
        <div class="feedback-container">
            <% feedbacks.forEach(function(feedback) { %>
                <div class="feedback-card">
                    <h4><%= feedback.username || 'Anonymous' %></h4>
                    <p><strong>Rating:</strong> <%= feedback.rating %> / 5</p>
                    <p><%= feedback.message %></p>
                    <small>Submitted on: <%= new Date(feedback.created_at).toLocaleString() %></small>
                    
                    <div class="replies">
                        <h5>Replies:</h5>
                        <% if (feedback.replies && feedback.replies.length > 0) { %>
                            <% feedback.replies.forEach(function(reply) { %>
                                <div>
                                    <strong><%= reply.username %></strong>: <%= reply.message %>
                                    <small>(<%= new Date(reply.created_at).toLocaleString() %>)</small>
                                </div>
                            <% }); %>
                        <% } else { %>
                            <p>No replies yet.</p>
                        <% } %>
                    </div>
                </div>
            <% }); %>
        </div>
        <div style="text-align: center;">
            <a href="/index2.html" class="back-home-button">Back to Home</a>
        </div>
    </div>
</body>
</html>
