<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="stylesheet" href="/css/styles.css">
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Feedback</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 20px;
            background-color: #f9f9f9;
        }
        .feedback-container {
            display: flex;
            flex-wrap: wrap;
            gap: 20px;
            justify-content: center;
        }
        .feedback-card {
            border: 1px solid #ddd;
            padding: 15px;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            max-width: 300px;
            background: white;
            text-align: center;
        }
        .feedback-card h4 {
            margin-bottom: 5px;
            color: #333;
        }
        .feedback-card p {
            margin: 0;
            font-size: 14px;
            color: #888;
        }
        .feedback-card small {
            color: #aaa;
        }
        .delete-button,
        .edit-button {
            padding: 10px 20px;
            color: white;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            margin-top: 10px;
        }
        .delete-button {
            background-color: #ff4d4d;
        }
        .edit-button {
            background-color: #4CAF50;
        }
        .back-home-button {
            display: inline-block;
            padding: 10px 20px;
            color: white;
            background-color: #e35693;
            text-decoration: none;
            border-radius: 5px;
            font-size: 16px;
            transition: background-color 0.3s ease;
            margin-top: 20px;
            text-align: center;
        }
    </style>
</head>
<body>
    <h1 style="text-align: center;">Your Feedback, Our Growth</h1>
    <p style="text-align: center; font-size: 18px;">
        Welcome, <strong><%= username %></strong>! <!-- הצגת שם המשתמש -->
    </p>
    <div class="feedback-container">
        <% feedbacks.forEach(function(feedback) { %>
            <div class="feedback-card">
                <h4><%= feedback.username %></h4>
                <p><strong>Rating:</strong> <%= feedback.rating %> / 5</p>
                <p><%= feedback.message %></p>
                <small>Submitted on: <%= new Date(feedback.created_at).toLocaleString() %></small>

                
                
                <!-- הצגת תגובות -->
                <div style="margin-top: 20px; padding-left: 20px;">
                    <h5>Replies:</h5>
                    <% if (feedback.replies && feedback.replies.length > 0) { %>
                        <% feedback.replies.forEach(function(reply) { %>
                            <div style="margin-bottom: 10px;">
                                <strong><%= reply.username %></strong>: <%= reply.message %>
                                <small style="color: #aaa;">(<%= new Date(reply.created_at).toLocaleString() %>)</small>
                                
                              <!-- כפתור עריכת Reply -->
<form action="/feedback/<%= feedback.id %>/reply/<%= reply.id %>/edit" method="GET" style="margin-top: 5px;">
    <button type="submit" style="
        padding: 5px 10px;
        background-color: #4CAF50;
        color: white;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        font-size: 12px;
    ">Edit Reply</button>
</form>

                                <!-- כפתור מחיקת Reply -->
                                <form action="/feedback/<%= feedback.id %>/reply/<%= reply.id %>/delete" method="POST" style="margin-top: 5px;">
                                    <button type="submit" style="
                                        padding: 5px 10px;
                                        background-color: #ff4d4d;
                                        color: white;
                                        border: none;
                                        border-radius: 5px;
                                        cursor: pointer;
                                        font-size: 12px;
                                    ">Delete Reply</button>
                                </form>
                            </div>
                        <% }); %>
                    <% } else { %>
                        <p>No replies yet.</p>
                    <% } %>
                </div>

                <!-- טופס להוספת תגובה -->
                <form action="/feedback/<%= feedback.id %>/reply" method="POST" style="margin-top: 20px;">
                    <textarea name="message" placeholder="Write your reply" rows="2" required style="width: 100%; margin-bottom: 10px;"></textarea>
                    <input type="hidden" name="username" value="<%= username %>"> <!-- הוספת השם באופן אוטומטי -->
                    <button type="submit" style="padding: 10px 20px; background-color: #007bff; color: white; border: none; border-radius: 5px;">Reply</button>
                </form>

                <!-- כפתור עריכת פידבק -->
                <form action="/feedback/<%= feedback.id %>/edit" method="GET" style="margin-top: 10px;">
                    <button type="submit" class="edit-button">Edit Feedback</button>
                </form>

                <!-- כפתור מחיקת פידבק -->
                <form action="/feedback/<%= feedback.id %>/delete" method="POST" style="margin-top: 10px;">
                    <button type="submit" class="delete-button">Delete Feedback</button>
                </form>
            </div>
        <% }); %>
    </div>

    <!-- סקריפט למחיקת תגובות ופידבקים -->
    <script>
        document.querySelectorAll('form[action*="/delete"]').forEach(form => {
            form.addEventListener('submit', (event) => {
                const confirmed = confirm('Are you sure you want to delete this?');
                if (!confirmed) {
                    event.preventDefault();
                }
            });
        });
    </script>

    <!-- Back to Home Button -->
    <div style="text-align: center; margin-top: 20px;">
        <a href="/" class="back-home-button">Back to Home</a>
    </div>
</body>
</html>
